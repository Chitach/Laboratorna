@model Lab.Models.AccountViewModels.LoginViewModel

<h2>Login to site</h2>
<div class="container">
	<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
		<div class="validation" asp-validation-summary="ModelOnly" />
		<div>
			<div class="form-group">
				<label asp-for="Email" class="col-sm-2 col-form-label">Insert Email</label>
				<div class="col-sm-10">
					<input type="text" asp-for="Email" />
				</div>
				<span asp-validation-for="Email" />
			</div>
			<div class="form-group">
				<label asp-for="Password" class="col-sm-2 col-form-label">Insert Password</label>
				<div class="col-sm-10">
					<input asp-for="Password" />
				</div>
				<span asp-validation-for="Password" />
			</div>
			<div class="form-group row">
				<div style="margin-top:25px;" class="col-sm-12">
					<button type="submit" class="btn btn-primary">Sign in</button>
				</div>
			</div>
		</div>
	</form>
</div>
