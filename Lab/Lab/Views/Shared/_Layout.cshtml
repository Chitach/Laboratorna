@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet

@{
    if (User.Identity.IsAuthenticated)
    {
        if(User.FindFirst(x => x.Type == System.Security.Claims.ClaimsIdentity.DefaultRoleClaimType).Value == "Doctor")
        {
            Layout = "~/Views/Shared/_LayoutDoctor.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_LayoutPatient.cshtml";
        }
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutAnonymous.cshtml";
    }
}

@RenderBody()


@RenderSection("Scripts", required: false)