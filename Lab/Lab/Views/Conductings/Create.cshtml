@model Lab.Models.ViewModels.ViewConducting

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Conducting</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="TestDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TestDate" class="form-control" />
                <span asp-validation-for="TestDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Comments" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Test</label>
            <div class="col-md-10">
                @Html.DropDownList("Tests", Model.Tests as SelectList,
                htmlAttributes: new { @class = "form-control", })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Patient</label>
            <div class="col-md-10">
                @Html.DropDownList("Patients", Model.Patients as SelectList,
                htmlAttributes: new { @class = "form-control", })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
